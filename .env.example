# Azure AI Foundry Project Configuration
# Copy this file to .env and fill in your values

# Your Azure AI Foundry project endpoint
# Format: https://<project-name>.services.ai.azure.com/api/projects/<project-id>
AZURE_PROJECT_ENDPOINT=https://grippy-resource.services.ai.azure.com/api/projects/grippy

# Your deployed model name in Azure AI Foundry
# Example: gpt-4o, gpt-5-chat, claude-sonnet-4-5, etc.
AZURE_MODEL_DEPLOYMENT_NAME=gpt-4o

# Optional: Specify markdown files directory
MARKDOWN_FILES_DIR=./markdown_files
